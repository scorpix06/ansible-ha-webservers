vrrp_script chk_haproxy {
  script "/usr/bin/pgrep haproxy"
  interval 2
  weight 2
}


vrrp_instance VI_1 {
  state {{ keepalived_state }}
  interface {{ keepalived_interface }}
  virtual_router_id 51
  priority {{ keepalived_priority }}

  virtual_ipaddress {
    {{ keepalived_virtual_ipaddress }}
  }

  track_script {
    chk_haproxy
  }
}
